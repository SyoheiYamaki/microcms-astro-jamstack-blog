---
import BlogPost from '../../layouts/BlogPost.astro';
import { getBlogDetail, getBlogs } from '../../library/microcms';

export async function getStaticPaths() {
  const response = await getBlogs({ fields: ["id"] });
  return response.contents.map((content: any) => ({
    params: {
      blogId: content.id,
    }
  }))
}

const { blogId } = Astro.params;
const blog = await getBlogDetail(blogId as string);
---

<BlogPost content={{
    title: blog.title,
    description: '',
    heroImage: blog.eyecatch?.url ?? '',
    pubDate: new Date(blog.publishedAt).toLocaleDateString('ja-JP'),
    updatedDate: new Date(blog.updatedAt).toLocaleDateString('ja-JP'),
}}
>
<main set:html={blog.body} />
</BlogPost>